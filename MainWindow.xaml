<Window x:Class="videoPlayerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:videoPlayerApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="540" Width="680"
        Closing="Window_Closing">
    <Grid>
        <Image x:Name="image" HorizontalAlignment="Left" Height="480" Margin="10,70,0,0" VerticalAlignment="Top" Width="640"/>
        <Button x:Name="Btn_Play" Content="Play" HorizontalAlignment="Right" Margin="0,10,10,0" VerticalAlignment="Top" Width="75" Height="35" Click="Btn_Play_Click"/>
    </Grid>
</Window>
